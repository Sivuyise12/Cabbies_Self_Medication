@model IEnumerable<ImfuyoRanch.Models.Equipment_Hire.Equipment>

@{
    ViewBag.Title = "Index";
}

<h2>Equipment</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentType.EquipementTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.HirePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <a><img src="data:image/png;base64,@Convert.ToBase64String(item.Picture, 0, item.Picture.Length)" style="width: 40px; height: 40px" alt="" /></a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EquipmentType.EquipementTypeName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EquipmentName)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.HirePrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentId }) |
        @Html.ActionLink("Details", "Details", new { id = item.EquipmentId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.EquipmentId })
    </td>
</tr>
}

</table>
