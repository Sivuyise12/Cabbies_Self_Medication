@model Shopping.Item

@{
    ViewBag.Title = "Item Details";
}

<h2 class="title text-center">@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        <img src="data:image/png;base64,@Convert.ToBase64String(Model.Picture, 0, Model.Picture.Length)" style="width: 300px; height: 300px" alt="" />
    </div>
    <div class="col-md-6 pull-right">
        <table class="table">
            <tr>
                <th>@Html.LabelFor(model => Model.ItemCode)</th>
                <td>
                    @Html.DisplayFor(model => model.ItemCode)
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(model => Model.Name)</th>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    @Html.DisplayFor(model => model.Category.Name)
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(model => Model.Description)</th>
                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(model => Model.QuantityInStock)</th>
                <th>
                    @Html.DisplayFor(model => model.QuantityInStock)
                </th>
            </tr>
            <tr>
                <th>@Html.LabelFor(model => Model.Price)</th>
                <th>
                    @Html.DisplayFor(model => model.Price)
                </th>
            </tr>
            <tr>
                <th>Number Of Reviews</th>
                <th>
                    1
                </th>
            </tr>
            <tr>
                <td>
                    <a class="btn btn-default" href="@Url.Action("Index","Items")">
                        <i class="fa fa-angle-left"></i>
                        Back to List
                    </a>
                    <a href="@Url.Action("ItemRatings","Index", new { id=Model.ItemCode })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye"></i>View Comments</a>

                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-default" href="@Url.Action("Edit","Items", new { id = Model.ItemCode })">
                            <i class="fa fa-edit"></i>
                            Edit
                        </a>
                    </td> 
                    <td>
                        <a class="btn btn-default" href="@Url.Action("Index","SalesReports")">
                            <i class="fa fa-bookmark"></i>
                            View Reports
                        </a>
                    </td>
                }

            </tr>
        </table>
    </div>
</div>
